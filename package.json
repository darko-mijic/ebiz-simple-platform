{
  "name": "ebiz-simple-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "libs",
    "e2e-tests"
  ],
  "scripts": {
    "prebuild": "npm run build --workspace=libs",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "dev:backend": "npm run build --workspace=backend && npm run start --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test:e2e": "npm run test --workspace=e2e-tests",
    "test:e2e:ui": "npm run test:ui --workspace=e2e-tests",
    "test:e2e:debug": "npm run test:debug --workspace=e2e-tests",
    "test:e2e:dry": "npm run test:dry --workspace=e2e-tests",
    "test:e2e:auth": "npm run test:auth --workspace=e2e-tests",
    "test:e2e:bank": "npm run test:bank --workspace=e2e-tests",
    "test:e2e:dashboard": "npm run test:dashboard --workspace=e2e-tests",
    "test:e2e:transactions": "npm run test:transactions --workspace=e2e-tests",
    "test:e2e:statements": "npm run test:statements --workspace=e2e-tests",
    "test:e2e:documents": "npm run test:documents --workspace=e2e-tests",
    "test:e2e:chat": "npm run test:chat --workspace=e2e-tests",
    "test:e2e:navigation": "npm run test:navigation --workspace=e2e-tests",
    "test:e2e:settings": "npm run test:settings --workspace=e2e-tests",
    "test:e2e:clean": "npm run clean --workspace=e2e-tests",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
} 